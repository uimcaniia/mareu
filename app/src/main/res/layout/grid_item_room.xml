<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView_room"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/circle_meeting" />

    <TextView
        android:id="@+id/textView_room"
        android:layout_width="64dp"
        android:layout_height="52dp"
        android:layout_alignStart="@+id/imageView_room"
        android:layout_alignTop="@+id/imageView_room"
        android:layout_alignEnd="@+id/imageView_room"
        android:layout_alignBottom="@+id/imageView_room"
        android:layout_marginStart="@dimen/circle_color_size_letter_margin_start"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="0dp"
        android:gravity="center_horizontal"
        android:text="A"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/circle_color_size_letter"
        android:textStyle="bold" />

</RelativeLayout>